<h1> New Movie </h1>
<hr />
<div class="editMoviePage">
  <form action="/movies/create" method="post">
    <label>Movie's title: </label>
    <input required type="text" name="title" placeholder="{{movie.title}}" />
    <label>Image: </label>
    <input required type="text" name="image" placeholder="https...//" />
    <label>Genre: </label>
    <input required type="text" name="genre" placeholder="{{genre}}" />
    <label>Plot: </label>
    <textarea required name="plot">{{plot}}</textarea>
    <label>Cast: </label>
    <select required name="cast" multiple>
      {{#each celebrity}}
        <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
    <button type="submit">SAVE</button>
  </form>
  <a href="/movies" class="back-button">go back</a>
</div>